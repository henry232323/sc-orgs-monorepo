# ==============================================
# SC-ORGS ENVIRONMENT CONFIGURATION TEMPLATE
# ==============================================
# Copy this file to .env and fill in your values

# Enable PostgreSQL
USE_POSTGRES=true

# PostgreSQL Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sc_orgs_dev
DB_USER=sc_orgs_user
DB_PASSWORD=secure_password
DATABASE_URL=postgresql://sc_orgs_user:secure_password@localhost:5432/sc_orgs_dev

# Test Database
TEST_DB_NAME=sc_orgs_test
TEST_DATABASE_URL=postgresql://sc_orgs_user:secure_password@localhost:5432/sc_orgs_test

# Application Configuration
NODE_ENV=development
PORT=3001

# Discord OAuth Configuration (you'll need to add your actual values)
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret
DISCORD_CALLBACK_URL=http://localhost:3001/api/auth/discord/callback

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-here-make-it-long-and-secure
JWT_EXPIRES_IN=72h
REFRESH_TOKEN_SECRET=your-refresh-token-secret-change-this-in-production
REFRESH_TOKEN_EXPIRES_IN=30d

# Other Configuration
VERIFICATION_SECRET=your-verification-secret-for-rsi-handles
FRONTEND_URL=http://localhost:3000

# RSI API Configuration
RSI_API_BASE_URL=https://robertsspaceindustries.com
RSI_SPECTRUM_API_BASE=https://robertsspaceindustries.com/api/spectrum
RSI_COMMUNITY_HUB_API=https://robertsspaceindustries.com/community-hub/api/v1/graphql

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug
LOG_FILE=./logs/app.log

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Security
SESSION_SECRET=your-session-secret-change-this-in-production
COOKIE_SECRET=your-cookie-secret-change-this-in-production

# pgAdmin Configuration
PGADMIN_DEFAULT_EMAIL=admin@sc-orgs.local
PGADMIN_DEFAULT_PASSWORD=your_pgadmin_password_here
