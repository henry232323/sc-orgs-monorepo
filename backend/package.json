{
  "name": "@sc-orgs/backend",
  "version": "1.0.0",
  "description": "SC-Orgs Backend API Server",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "dev:compiled": "yarn build && tsx watch dist/index.js",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "db:migrate": "knex migrate:latest",
    "db:migrate:rollback": "knex migrate:rollback",
    "db:seed": "knex seed:run",
    "db:reset": "knex migrate:rollback --all && knex migrate:latest && knex seed:run",
    "db:make:migration": "knex migrate:make",
    "db:make:seed": "knex seed:make",
    "db:status": "knex migrate:status",
    "docker:db:up": "docker-compose up -d postgres",
    "docker:db:down": "docker-compose down",
    "docker:db:logs": "docker-compose logs postgres",
    "docker:db:reset": "docker-compose down -v && docker-compose up -d postgres && yarn db:migrate && yarn db:seed"
  },
  "dependencies": {
    "@types/ajv": "^1.0.4",
    "@types/express-session": "^1.18.2",
    "@types/node-cron": "^3.0.11",
    "@wesleytodd/openapi": "git+https://github.com/erikjuhani/express-openapi.git#express-openapi-types",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "cheerio": "^1.1.2",
    "cors": "^2.8.5",
    "discord-api-types": "^0.38.26",
    "dompurify": "^3.2.7",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.18.2",
    "graphql": "^16.11.0",
    "graphql-request": "^7.2.0",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsdom": "^27.0.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.0.1",
    "markdown-it": "^14.1.0",
    "node-cron": "^4.2.1",
    "node-fetch": "^3.3.2",
    "openapi-types": "^12.1.3",
    "passport": "^0.7.0",
    "passport-discord": "^0.1.4",
    "pg": "^8.16.3",
    "turndown": "^7.2.1",
    "tweetnacl": "^1.0.3",
    "uuid": "^11.1.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cheerio": "^1.0.0",
    "@types/cors": "^2.8.17",
    "@types/dompurify": "^3.2.0",
    "@types/express": "4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsdom": "^27.0.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/markdown-it": "^14",
    "@types/node": "^20.9.0",
    "@types/passport": "^1.0.16",
    "@types/passport-discord": "^0.1.4",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^2.0.16",
    "@types/turndown": "^5.0.5",
    "@types/uuid": "^10.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  },
  "packageExtensions": {
    "@types/express-session": {
      "dependencies": {
        "@types/express": "4.17.21"
      }
    },
    "@types/passport-discord": {
      "dependencies": {
        "@types/express": "4.17.21"
      }
    },
    "@types/passport-oauth2": {
      "dependencies": {
        "@types/express": "4.17.21"
      }
    },
    "@types/passport": {
      "dependencies": {
        "@types/express": "4.17.21"
      }
    }
  }
}
